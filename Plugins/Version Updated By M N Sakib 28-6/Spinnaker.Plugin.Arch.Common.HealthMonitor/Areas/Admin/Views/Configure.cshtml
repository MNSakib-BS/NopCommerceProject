@model Spinnaker.Plugin.Arch.Common.HealthMonitor.Areas.Admin.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="HealthMonitor" asp-action="Configure" method="post">

    <div class="content-header clearfix">
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <nop-label asp-for="MonitoringHostURL" />
        </div>
        <div class="col-md-10">
            <nop-editor asp-for="MonitoringHostURL" />
            <span asp-validation-for="MonitoringHostURL"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <nop-label asp-for="SiteKey" />
        </div>
        <div class="col-md-10">
            <nop-editor asp-for="SiteKey" />
            <span asp-validation-for="SiteKey"></span>
        </div>
    </div>

</form>

<form asp-controller="HealthMonitor" asp-action="SendTest" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="Test Exception" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>