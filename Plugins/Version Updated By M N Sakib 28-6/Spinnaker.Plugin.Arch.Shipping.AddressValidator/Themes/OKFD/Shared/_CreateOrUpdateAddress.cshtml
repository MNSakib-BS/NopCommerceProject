@model AddressModel

<input asp-for="Id" type="hidden" />
<div class="edit-address">
    <div class="form-row">
        <div class="inputs col-md-6">
            <label asp-for="FirstName" asp-postfix=":"></label>
            <nop-required />
            <input class="form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="inputs no-label col-md-6">
            <label asp-for="LastName" asp-postfix=":"></label>
            <nop-required />
            <input class="form-control" asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
    </div>

    <div class="inputs">
        <label asp-for="Email" asp-postfix=":"></label>
        <nop-required />
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    @if (Model.StreetAddressEnabled)
    {
        <div class="inputs">
            <label asp-for="Address1" asp-postfix=":"></label>
            @if (Model.StreetAddressRequired)
            {
                <nop-required />
            }
            <input class="form-control" asp-for="Address1" />
            <span asp-validation-for="Address1"></span>
        </div>
    }
    @if (Model.StreetAddress2Enabled)
    {
        <div class="inputs">
            <label asp-for="Address2" asp-postfix=":"></label>
            @if (Model.StreetAddress2Required)
            {
                <nop-required />
            }
            <input class="form-control" asp-for="Address2" />
            <span asp-validation-for="Address2"></span>
        </div>
    }
    @if (Model.CompanyEnabled)
    {
        <div class="inputs">
            <label asp-for="Company" asp-postfix=":"></label>
            @if (Model.CompanyRequired)
            {
                <nop-required />
            }
            <input class="form-control" asp-for="Company" />
            <span asp-validation-for="Company"></span>
        </div>
    }


    @if (Model.CountyEnabled)
    {
        <div class="inputs">
            <label asp-for="County" asp-postfix=":"></label>
            @if (Model.CountyRequired)
            {
                <nop-required />
            }
            <input class="form-control" asp-for="County" />
            <span asp-validation-for="County"></span>
        </div>
    }

    @if (Model.CityEnabled && Model.ZipPostalCodeEnabled)
    {
        <div class="form-row">
            <div class="inputs col-md-6">
                <label asp-for="City" asp-postfix=":"></label>
                @if (Model.CityRequired)
                {
                    <nop-required />
                }
                <input class="form-control" asp-for="City" />
                <span asp-validation-for="City"></span>
            </div>
            <div class="inputs col-md-6">
                <label asp-for="ZipPostalCode" asp-postfix=":"></label>
                @if (Model.ZipPostalCodeRequired)
                {
                    <nop-required />
                }
                <input class="form-control" asp-for="ZipPostalCode" />
                <span asp-validation-for="ZipPostalCode"></span>
            </div>
        </div>
    }
    @if (Model.CityEnabled && !Model.ZipPostalCodeEnabled)
    {
        <div class="inputs">
            <label asp-for="City" asp-postfix=":"></label>
            @if (Model.CityRequired)
            {
                <nop-required />
            }
            <input class="form-control" asp-for="City" />
            <span asp-validation-for="City"></span>
        </div>
    }
    @if (!Model.CityEnabled && Model.ZipPostalCodeEnabled)
    {
        <div class="inputs">
            <label asp-for="ZipPostalCode" asp-postfix=":"></label>
            @if (Model.ZipPostalCodeRequired)
            {
                <nop-required />
            }
            <input class="form-control" asp-for="ZipPostalCode" />
            <span asp-validation-for="ZipPostalCode"></span>
        </div>
    }
    @if (Model.CountryEnabled && Model.StateProvinceEnabled)
    {
        <div class="form-row">
            <div class="inputs col-md-6">
                <label asp-for="CountryId" asp-postfix=":"></label>
                <nop-required />
                <select class="form-control select" asp-for="CountryId" asp-items="Model.AvailableCountries"
                        data-trigger="country-select"
                        data-url="@(Url.RouteUrl("GetStatesByCountryId"))"
                        data-stateprovince="#@Html.IdFor(model => model.StateProvinceId)"
                        data-loading="#states-loading-progress"></select>
                <span asp-validation-for="CountryId"></span>
            </div>
            <div class="inputs col-md-6">
                <label asp-for="StateProvinceId" asp-postfix=":"></label>
                <select class="form-control select" asp-for="StateProvinceId" asp-items="Model.AvailableStates"></select>
                <span id="states-loading-progress" style="display: none;" class="please-wait">@T("Common.Wait...")</span>
                <span asp-validation-for="StateProvinceId"></span>
            </div>
        </div>
    }
    @if (Model.CountryEnabled && !Model.StateProvinceEnabled)
    {
        <div class="inputs">
            <label asp-for="CountryId" asp-postfix=":"></label>
            <nop-required />
            <select class="form-control select" asp-for="CountryId" asp-items="Model.AvailableCountries"
                    data-trigger="country-select"
                    data-url="@(Url.RouteUrl("GetStatesByCountryId"))"
                    data-stateprovince="#@Html.IdFor(model => model.StateProvinceId)"
                    data-loading="#states-loading-progress"></select>
            <span asp-validation-for="CountryId"></span>
        </div>
    }

    @if (Model.PhoneEnabled && Model.FaxEnabled)
    {
        <div class="form-row">
            <div class="inputs col-md-6">
                <label asp-for="PhoneNumber" asp-postfix=":"></label>
                @if (Model.PhoneRequired)
                {
                    <nop-required />
                }
                <input class="form-control" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="inputs col-md-6">
                <label asp-for="FaxNumber" asp-postfix=":"></label>
                @if (Model.FaxRequired)
                {
                    <nop-required />
                }
                <input class="form-control" asp-for="FaxNumber" />
                <span asp-validation-for="FaxNumber"></span>
            </div>
        </div>
    }
    @if (Model.PhoneEnabled && !Model.FaxEnabled)
    {
        <div class="inputs">
            <label asp-for="PhoneNumber" asp-postfix=":"></label>
            @if (Model.PhoneRequired)
            {
                <nop-required />
            }
            <input class="form-control" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    }
    @if (!Model.PhoneEnabled && Model.FaxEnabled)
    {
        <div class="inputs">
            <label asp-for="FaxNumber" asp-postfix=":"></label>
            @if (Model.FaxRequired)
            {
                <nop-required />
            }
            <input class="form-control" asp-for="FaxNumber" />
            <span asp-validation-for="FaxNumber"></span>
        </div>
    }
    <div id="map" style="min-height:300px; width:100%"></div>

    @if (Model.CustomAddressAttributes.Count > 0)
    {
        @await Html.PartialAsync("_AddressAttributes", Model.CustomAddressAttributes)
    }
</div>


<script>
    $(document).ready(function () {
        $('select[data-trigger="country-select"]').on('change', function () {

            var countrySelect = $(this);
            var countryId = countrySelect.val();
            var url = countrySelect.data('url');
            var stateProvinceSelector = countrySelect.data('stateprovince');
            var loadingIndicator = $(countrySelect.data('loading'));

            $.ajax({
                url: url,
                type: 'GET',
                data: { countryId: countryId, addSelectStateItem: true },
                beforeSend: function () {
                    loadingIndicator.show();
                },
                success: function (response) {

                    var stateProvinceSelect = $(stateProvinceSelector);
                    stateProvinceSelect.empty();

                    $.each(response, function (index, state) {
                        var option = $('<option></option>').attr('value', state.id).text(state.name);
                        stateProvinceSelect.append(option);
                    });
                },
                complete: function () {
                    loadingIndicator.hide();
                }
            });
        });
    });
</script>
